<Window x:Class="toolcad23.Views.PreviewWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:toolcad23.Views"
        mc:Ignorable="d"
        Title="PreviewWindowView"
        Height="450"
        Width="450"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Abdrakov.Styles;component/Styles/ProgressBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Image Source="/Resources/logo_tc23.png" />
        <ProgressBar Style="{StaticResource AbdrakovCircularProgressBar}"
                     Foreground="AliceBlue"
                     Value="0"
                     Width="18"
                     Height="18"
                     IsIndeterminate="True"
                     IsHitTestVisible="False"
                     Margin="180, 180, 0, 0"/>
    </Grid>
</Window>
